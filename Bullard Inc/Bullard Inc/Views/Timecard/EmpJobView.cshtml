@model Bullard_Inc.Models.Job[]
@{
    Layout = "~/Views/Shared/FieldWorkerFrame.cshtml";

    string startDate = "12/6/17";
    string endDate = "12/13/17";
}

<h2 align="center"><b>TIMECARD</b></h2>

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <nav>
                <ul class="pagination pagination-lg pg-bluegrey">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="history">
                            @startDate - @endDate
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col"></div>
    </div>
</div>

<p>Status: <span style="color: red"><b>Model.status</b></span></p>
<button class="btn btn-default btn-lg btn-block">@ViewData["day"]</button>
<br />
<a href="@ViewData["day_int"]/empjobadd" class="btn btn-default">ADD</a>
    @foreach (var job in Model)
    {
        <hr />
        <!--<form action="ViewData["day_int"]/empjobedit">-->
            <p>
                JOB #: @Html.DisplayFor(m => job.Project_Id, "Project #:") <br />
                Hours: @Html.DisplayFor(m => job.Hours) <br />
                Miles: @Html.DisplayFor(m => job.Mileage) <br />
                Lunch: @Html.DisplayFor(m => job.Lunch) <br />
                Work Perfomed: @Html.DisplayFor(m => job.ActivityCode) <br /> <br />
                <div>
                    @Html.ActionLink("Edit", "EmpJobEdit", new { id = job.Job_Id})
                   <!--<button type="submit" class="btn btn-default" name="">EDIT</button>
                   <button type="submit" class="btn btn-default disabled">DEL</button>-->
                </div>
            </p>
       <!--</form>-->
            <hr />
            }


<p>
    Total Hours: XXX <br />
    Total Miles: XXX <br />
</p>

<div align="right">
    <a href="/Timecard/Index" class="btn btn-default btn-lg">Back</a>
</div>
