@model Bullard_Inc.Models.JobModel

@{
    Layout = "~/Views/Shared/FieldWorkerFrame.cshtml";

    string startDate = "12/6/17";
    string endDate = "12/13/17";
    string day = "n/a";

    switch (Model.employeeDay_Id)
    {
        case 1: day = "monday".ToUpper(); break;
        case 2: day = "tuesday".ToUpper(); break;
        case 3: day = "wednesday".ToUpper(); break;
        case 4: day = "thursday".ToUpper(); break;
        case 5: day = "friday".ToUpper(); break;
        case 6: day = "saturday".ToUpper(); break;
        case 7: day = "sunday".ToUpper(); break;
    }
}

<h2 align="center"><b>TIMECARD</b></h2>

<nav>
    <ul class="pagination pagination-lg">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        <li class="page-item active"><a class="page-link" href="history">@startDate - @endDate</a></li>

        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>

<p>Status: <span style="color: red"><b>@Model.status</b></span></p>

<button class="btn btn-default btn-lg btn-block">@day</button>
<br />

<form>

    <div class="btn-group">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Job Number: @Model.activityCode</button>

        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">14-081</a>
            <a class="dropdown-item" href="#">14-082</a>
            <a class="dropdown-item" href="#">14-083</a>
            <a class="dropdown-item" href="#">14-084</a>
            <a class="dropdown-item" href="#">14-085</a>

        </div>
    </div><br /><br />

    <div class="md-form">
        <input value=@Model.hours type="text" id="form6" class="form-control">
        <label class="active" for="form6">Hours</label>
    </div>

    <div class="md-form">
        <input value=@Model.mileage type="text" id="form6" class="form-control">
        <label class="active" for="form6">Miles</label>
    </div>

    <div class="md-form">
        <input value=@Model.lunch type="text" id="form6" class="form-control">
        <label class="active" for="form6">Lunch</label>
    </div>

    <div class="md-form">
        <textarea type="text" id="form7" class="md-textarea">@Model.workPerformed</textarea>
        <label for="form7">Work Preferred</label>
    </div>

</form>

<div align="right">
    <a href="/Timecard/empjobview/@Model.employeeDay_Id" class="btn btn-primary">Back</a>
</div>