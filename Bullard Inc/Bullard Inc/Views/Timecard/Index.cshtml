@{
    Layout = "~/Views/Shared/FieldWorkerFrame.cshtml";

    string status = "OPEN";
    DateTime dateValue = new DateTime(2017, 2, 15);
    switch (dateValue.DayOfWeek)
    {
        case DayOfWeek.Monday:
            dateValue = dateValue.AddDays(-1);
            break;
        case DayOfWeek.Tuesday:
            dateValue = dateValue.AddDays(-2);
            break;
        case DayOfWeek.Wednesday:
            dateValue = dateValue.AddDays(-3);
            break;
        case DayOfWeek.Thursday:
            dateValue = dateValue.AddDays(-5);
            break;
        case DayOfWeek.Friday:
            dateValue = dateValue.AddDays(-6);
            break;
        case DayOfWeek.Saturday:
            dateValue = dateValue.AddDays(-7);
            break;
        default:
            break;

    }
    DateTime endWeek = dateValue.AddDays(7);
    string startDate = dateValue.ToString("d");
    string endDate = endWeek.Date.ToString("d");
}
<h2 align="center"><b>TIMECARD</b></h2>

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <nav>
                <ul class="pagination pagination-lg pg-bluegrey">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="history">
                            @startDate - @endDate
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col"></div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <p>Status: <span style="color: red"><b>@status</b></span></p>
    </div>
</div>

