@model Bullard_Inc.Models.Job

@{
    Layout = "~/Views/Shared/FieldWorkerFrame.cshtml";

    string startDate = "12/6/17";
    string endDate = "12/13/17";

    string dayString = (string) ViewData["dayString"];
}

<h2 align="center"><b>TIMECARD</b></h2>

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <nav>
                <ul class="pagination pagination-lg pg-bluegrey">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="history">
                            @startDate-@endDate
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col"></div>
    </div>
</div>

<p>Status: <span style="color: red"><b>Model.status</b></span></p>

<button class="btn btn-default btn-lg btn-block">@dayString</button>
<br />

<form action="EmpJobAdd" method="post">

    <div class="md-form">
        <input value=@Int32.Parse((string)ViewData["day_id"]) type="hidden" id="EmployeeDay_Id" class="form-control" name="EmployeeDay_Id">
    </div>

    <div class="md-form">
        <label class="active" for="form6">Project #:</label>
        <select id="Project_Id" name="Project_Id">
            <option value="1">Project_Id 1</option>
            <option value="2">Project_Id 2</option>
            <option value="3">Project_Id 3</option>
            <option value="4">Project_Id 4</option>
            <option value="5">Project_Id 5</option>
        </select>
    </div>
    <br />

    <div class="md-form">
        <div class="md-form">
            <label class="active" for="form6">Work Performed: </label>
            <select id="ActivityCode" name="ActivityCode">
                <option value="1">Dry Wall</option>
                <option value="2">Electric</option>
                <option value="3">Pluming</option>
                <option value="4">Carpenter</option>
                <option value="5">Landscaping</option>
            </select>
        </div>
    </div>

    <div class="md-form">
        <input value=0 type="text" id="Hours" class="form-control" name="Hours">
        <label class="active" for="form6">Hours</label>
    </div>

    <div class="md-form">
        <input value=0 type="text" id="Mileage" class="form-control" name="Mileage">
        <label class="active" for="form6">Miles</label>
    </div>

    <div class="md-form">
        <input value=0 type="text" id="Lunch" class="form-control" name="Lunch">
        <label class="active" for="form6">Lunch</label>
    </div>

    <div>
        <input type="submit" class="btn btn-default" value="Submit">

        <div align="right">
            <a class="btn btn-default" href="/Timecard/empjobview/@Model.EmployeeDay_Id">Cancel</a>
        </div>
    </div>
</form>

