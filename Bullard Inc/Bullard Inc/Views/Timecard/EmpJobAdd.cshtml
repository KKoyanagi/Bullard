@model Bullard_Inc.Models.Timecard_EmpJobAddEdit

@{
    ViewBag.Title = "Job Add";
    Layout = "~/Views/Shared/FieldWorkerFrame.cshtml";
    
    string date = (string)ViewData["weekDate"];
    string status = (string)ViewData["status"];
    int day_id = (int) ViewData["day_id"];
    string dayString = (string) ViewData["dayString"];
    int empDayId = (int)ViewData["empDayId"];
    int ts_id = (int)ViewData["ts_id"];
}
<script type="text/javascript">
    function clearThis(target){
        target.value= "";
    }
</script>

<h2 align="center"><b>TIMECARD</b></h2>

<select id="Week_Id" name="Week_Id">
    <option selected disabled>@date</option>
</select>
<br />
<p>Status: <span style="color: red"><b>@status</b></span></p>

<button class="btn btn-default btn-lg btn-block">@dayString</button>
<br />

<form action="@Url.Action("EmpJobSubmit", "Timecard", new { day_id = day_id })" method="post">

    <div class="md-form">
        <input value=@empDayId type="hidden" id="EmployeeDay_Id" class="form-control" name="EmployeeDay_Id">
    </div>

 <!-- Projects Drowndown List-->
    <div class="md-form">
        <label class="active" for="form6">Project #:</label>
        <br>
        <select id="Project_Id" name="Project_Id">
            @foreach (var project in Model.Projects)
            {
                <option value=@project.Project_Id> @project.Project_Num - @project.Location </option>
            }
        </select>
        <br>
    </div>

    <!-- ActivityCode (Work Performed) Drowndown List-->
    <div class="md-form">
        <label class="active" for="form6">Work Performed:</label>
        <br>
        <select id="ActivityCode" name="ActivityCode">
            @foreach (var code in Model.ActivityCodes)
            {
                <option value=@code.ActivityCode_Id>@code.ActivityDescription </option>
            }
        </select>
        <br>
    </div>

    <div class="md-form">
        <input value="0" onclick="clearThis(this)" type="text" id="Hours" class="form-control" name="Hours">
        <label class="active" for="form6">Hours</label>
    </div>

    <div class="md-form">
        <input value=0 onfocus="clearThis(this)" type="text" id="Mileage" class="form-control" name="Mileage">
        <label class="active" for="form6">Miles</label>
    </div>

    <div class="md-form">
        <input value=0 onfocus="clearThis(this)" type="text" id="Lunch" class="form-control" name="Lunch">
        <label class="active" for="form6">Lunch</label>
    </div>

    <div>
        <div class="row">
            <div class="col">
                <div align ="left">
                    <input type="submit" class="btn btn-default" value="SUBMIT">
                </div>
            </div>
            <div class="col">
                <div align="right">
                    <a class="btn btn-default" href="/Timecard/empjobview/@ts_id/@day_id">CANCEL</a>
                </div>
            </div>
        </div>
    </div>
</form>

