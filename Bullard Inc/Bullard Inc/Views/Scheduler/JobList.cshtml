@model Bullard_Inc.Models.Scheduler_JobList

@{
    ViewBag.Title = "Jobs List";
    Layout = "~/Views/Shared/AdminFrame.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>JOB CODES</title>
</head>
<body>
    <div @*class="text-center"*@>
        <h1>Job Codes</h1>
    </div>
    <br><br>

    <div class="card">
        <div class="card-block">
            <div class="form-header text-left">
               @* <input type="text" placeholder="SEARCH JOB CODES">*@
            </div>
            <div class="md-form">
                @foreach (var activityCode in Model.ActivityCodes)
                {
                    <div class="panel-group" id="#">
                        <div class="panel panel-default">

                            <div class="panel-heading">
                                <h5 class="panel-title">
                                    <p>
                                        @activityCode.ActivityCode_Id - @activityCode.ActivityDescription
                                        <div>
                                            @Html.ActionLink("Edit", "#", new { id = activityCode.ActivityCode_Id })
                                            &emsp; &emsp; <!--adds space between Edit & Delete-->
                                            @Html.ActionLink("Delete", "#", new { id = activityCode.ActivityCode_Id }, new { onclick = "return confirm('Are you sure you want to delete this job code?');" })
                                        </div>
                                    </p>
                                </h5>
                            </div>

                        </div>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </div>
</body>
</html>

