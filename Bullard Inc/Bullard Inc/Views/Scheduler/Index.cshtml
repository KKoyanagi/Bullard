}


<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] Bullard </title>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link href="~/Content/compiled.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
    <script type="text/javascript">
        window.onload = function () {
            document.getElementById('panel1bt').click();

        }
    </script>
</head>

   <div class="container-fluid">
        <h1>TIMECARD</h1>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs tabs-3 Bullard_Color" role="tablist">
            <li class="nav-item">
                <a id="panel1bt" class="nav-link" data-toggle="tab" href="#panel1" onclick="getPending();" role="tab">PENDING</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#panel2" onclick="getPastDue();" role="tab">PAST DUE</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#panel3" onclick="getApproved();" role="tab">APPROVED</a>
            </li>
        </ul>
   </div>
    <!-- Tab panels -->
    <div class="tab-content card">
        <!--Panel 1-->
        <div class="tab-pane fade" id="panel1" role="tabpanel">
            
        </div>

            
            <div class="tab-pane fade" id="panel2" role="tabpanel">
                
            </div>
            <!--/.Panel 2-->
            <!--Panel 3-->
            <div class="tab-pane fade" id="panel3" role="tabpanel">
                
            </div>
            <!--/.Panel 3-->
        </div>

<script type="text/javascript">
    function getPending() {
        $("#panel1").load("@Url.Action("GetPending", "Scheduler")");
    }
    function getPastDue() {
        $("#panel2").load("@Url.Action("GetPastDue", "Scheduler")");
    }
    function getApproved() {
        $("#panel3").load("@Url.Action("GetApproved", "Scheduler")");
    }

</script>
