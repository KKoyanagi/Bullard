@{
    Layout = "~/Views/Shared/AdminFrame.cshtml";
}

<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] Bullard </title>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link href="~/Content/compiled.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
</head>

<form action="SubmitUser" method="post">
    <div class="container-fluid">
        <h1>ADD USER</h1>
            <div class="row">
                <div class="col-md-4">
                    <div class="md-form">
                        <input type="text" id="FirstName" name="FirstName" class="form-control">
                        <label for="form01" class="">First Name</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="md-form">
                        <input type="text" id="LastName" name="LastName" class="form-control">
                        <label for="form02" class="">Last Name</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="md-form">
                        <input type="text" id="Phone" name="Phone" class="form-control">
                        <label for="form04" class="">Phone Number</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="md-form">
                        <input type="text" id="Email" name="Email" class="form-control">
                        <label for="form05" class="">Email</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="md-form">
                        <input type="text" id="AccountName" name="AccountName" class="form-control">
                        <label for="form06" class="">Username</label>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="text-center">
                <input type="submit" class="btn btn-default" value="Submit">
            </div>
        </div>
    </div>
</form>