<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] Bullard </title>
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link href="https://mdbootstrap.com/wp-content/themes/mdbootstrap4/css/compiled.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>



<body class="fixed-sn mdb-skin">
    <header>

        <!--------------------- SIDEBAR NAVAGATION --------------------->
        <ul id="slide-out" class="side-nav fixed sn-bg-1 custom-scrollbar">

            <!-- Logo -->
            <li>
                <div class="logo-wrapper waves-light">
                    <a href="#"><img src="~/Content/Images/headerlogo_website.png" class="img-fluid flex-center"></a>
                </div>
            </li>
            <!--/. Logo -->
            <!-- Side navigation links -->
            <li>
                <ul class="collapsible collapsible-accordion">
                    <li>
                        <a class="collapsible-header waves-effect arrow-r">
                            <i class="fa fa-clock-o"></i>
                            TIME CARDS
                            <i class="fa fa-angle-down rotate-icon"></i>
                        </a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a href="#" class="waves-effect">PENDING</a>
                                </li>
                                <li>
                                    <a href="#" class="waves-effect">PAST DUE</a>
                                </li>
                                <li>
                                    <a href="#" class="waves-effect">APPROVED</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a class="collapsible-header waves-effect arrow-r">
                            <i class="fa fa-users"></i>
                            MANAGE USERS
                            <i class="fa fa-angle-down rotate-icon"></i>
                        </a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a href="#" class="waves-effect">USERS LIST</a>
                                </li>
                                <li>
                                    <a href="#" class="waves-effect">ADD USERS</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </li>
            <!--/. Side navigation links -->

            <div class="sidenav-bg mask-strong"></div>

        </ul>
        <!------------------- ./SIDEBAR NAVAGATION --------------------->
        <!----------------------- NAVAGATION BAR ----------------------->
        <nav class="navbar fixed-top navbar-toggleable-md navbar-dark scrolling-navbar double-nav">

            <!-- SideNav slide-out button -->
            <div class="float-xs-left">
                <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
            </div>
            <!-- SideNav slide-out button -->
            <!-- Breadcrumb-->
            <div class="navbar-brand">
                BULLARD TIMECARD PORTAL
            </div>
            <!-- Breadcrumb-->
            <!-- Right-side navagation items -->
            <ul class="nav navbar-nav nav-flex-icons ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fa fa-envelope"></i>
                        <span class="hidden-sm-down">Contact</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fa fa-user"></i>
                        <span class="hidden-sm-down">Account</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">
                        <i class="fa fa-sign-out"></i>
                        <span class="hidden-sm-down">Sign Out</span>
                    </a>
                </li>
            </ul>
            <!-- ./Left-side navagation items -->

        </nav>
        <!--------------------- ./NAVAGATION BAR ----------------------->

    </header>

    <main>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <script type="text/javascript" src="https://mdbootstrap.com/wp-content/themes/mdbootstrap4/js/compiled.min.js"></script>

    <script>
    $(".button-collapse").sideNav();
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>