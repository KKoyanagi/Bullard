@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/LoginFrame.cshtml";
}

<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] Bullard </title>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link href="https://mdbootstrap.com/wp-content/themes/mdbootstrap4/css/compiled.min.css" rel="stylesheet">
    <link href="~/Content/compiled.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
    <!--LOGIN PAGE-->
    <div class="container-fluid">
        <!--Header-->
        <div class="modal-header">
            <h3 class="w-100"><i class="fa fa-user"></i> Login</h3>
        </div>
        <!--Body-->
        <div class="modal-body">
            <div class="md-form">
                <i class="fa fa-user-circle-o prefix"></i>
                <input type="text" id="form2" class="form-control">
                <label for="form2">Employee ID Number</label>
            </div>
            <div class="md-form">
                <i class="fa fa-lock prefix"></i>
                <input type="password" id="form3" class="form-control">
                <label for="form3">Your password</label>
            </div>
            <div class="text-center">
                <a href="/timecard/index" class="btn btn-default btn-lg">Login</a>
                @*<button href="/Timecard/index" class="btn btn-primary btn-lg">Login</button>*@
            </div>
            <div class="text-center">
                <p>
                    Forgot
                    <span class="link" data-toggle="modal" data-target="#modal-forgot-password">Password?</span>
                </p>
            </div>
        </div>
        <!--Footer-->
        <div class="modal-form">
            <div class="options text-left">
                <p>Having troubles logging in?</p>
                <p>Contact OmniCom Service Desk at</p>
                <p><a href="#">servicedesk@omnicom.com</a> or 916-555-5555</p>
            </div>
        </div>
    </div>

    <!--FORGOT PASSWORD-->
    <div class="modal fade modal-ext" id="modal-forgot-password" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <!--Content-->
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title w-100" id="myModalLabel">Reset Password</h4>
                </div>
                <!--Body-->
                <div class="modal-body">
                    <div class="md-form">
                        <input type="text" id="form2" class="form-control">
                        <label for="form2">First Name</label>
                    </div>
                    <div class="md-form">
                        <input type="text" id="form2" class="form-control">
                        <label for="form2">Last Name</label>
                    </div>
                    <div class="md-form">
                        <input type="text" id="form2" class="form-control">
                        <label for="form2">Employee ID Number</label>
                    </div>
                    <div class="md-form">
                        <input type="text" id="form32" class="form-control">
                        <label for="form32">Your Email</label>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <!--Footer-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
            <!--/.Content-->
